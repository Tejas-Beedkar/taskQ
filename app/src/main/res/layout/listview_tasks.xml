<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/listView_tasks_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/app_name_with_copyright"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/listview_tasks_imageView_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_task_not_done" />

    <TextView
        android:id="@+id/listview_tasks_TextView_Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:contextClickable="false"
        android:inputType="textMultiLine|textImeMultiLine"
        android:linksClickable="false"
        android:paddingStart="8dp"
        android:text="Tasks"
        app:layout_constraintBottom_toBottomOf="@+id/listview_tasks_imageView_Status"
        app:layout_constraintEnd_toStartOf="@+id/listview_tasks_imageView_Delete"
        app:layout_constraintStart_toEndOf="@+id/listview_tasks_imageView_Status"
        app:layout_constraintTop_toTopOf="@+id/listview_tasks_imageView_Status" />


    <ImageView
        android:id="@+id/listview_tasks_imageView_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contextClickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/listview_tasks_TextView_Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/listview_tasks_TextView_Description"
        app:srcCompat="@drawable/ic_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>