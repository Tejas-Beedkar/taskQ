<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Main" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="AppTheme.MaterialTab" parent="Theme.MaterialComponents.Light.DarkActionBar">
    </style>

    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Progressbar.colorPrimary" parent="AppTheme.Main">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

</resources>
